<% if @story.errors.any? %>
  <h2>The following errors prevented your story from saving:</h2>
  <ul>
  <% @story.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
<h1>Add a new story</h1>
<%= form_for @story do |f| %>

    <div class = "field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
   	<div class = "field">
      <%= f.label :link %>
      <%= f.text_field :link %>
    </div>
 	 <div class = "field">
      <%= f.label :category %>
      <%= f.text_field :category %>
    </div>
  <div class="actions">
  <%= f.submit %>
  </div>
<% end %>